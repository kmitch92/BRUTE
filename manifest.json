{
    "name": "BRUTE",
    "description": "Productivity above all else",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "onLoad.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}